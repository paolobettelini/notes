%%%%% DOUBLE PROOF ENVIRONMENTS %%%%%

\newcommand{\doubleproof}[4]{%
    \noindent
    \begin{minipage}[t]{0.075\textwidth}
        \raggedright
        \textbf{{\thickmuskip=0mu plus 0mu #1}}
    \end{minipage}%
    \begin{minipage}[t]{0.925\textwidth}
        #3
    \end{minipage}\\[0.5em]
    \begin{minipage}[t]{0.075\textwidth}
        \raggedright
        \textbf{{\thickmuskip=0mu plus 0mu #2}}
    \end{minipage}%
    \begin{minipage}[t]{0.925\textwidth}
        #4
    \end{minipage}%
}

% (=>) then (<=)
\newcommand{\iffproof}[2]{%
    \doubleproof{\((\implies)\)}{\((\impliedby)\)}{#1}{#2}%
}

% (<=) then (=>)
\newcommand{\ffiproof}[2]{%
    \doubleproof{\((\impliedby)\)}{\((\implies)\)}{#1}{#2}%
}

% (⊆) then (⊇)
\newcommand{\doubleinclusionproof}[2]{%
    \doubleproof{\((\subseteq:)\)}{\((\supseteq:)\)}{#1}{#2}%
}

% (≤) then (≥)
\newcommand{\doubleleqproof}[2]{%
    \doubleproof{\((\leq)\)}{\((\geq)\)}{#1}{#2}%
}

